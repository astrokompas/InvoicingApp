<Page x:Class="InvoicingApp.Pages.AddPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InvoicingApp.Pages"
      mc:Ignorable="d" 
      Title="Dodaj płatność" Background="{StaticResource BackgroundBrush}">

    <Page.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}" />
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding AddPaymentCommand}" />
    </Page.InputBindings>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Dodaj płatność" 
                   FontSize="28" 
                   FontWeight="SemiBold" 
                   Foreground="{StaticResource WhiteBrush}" 
                   Margin="0,0,0,20"/>

        <!-- Content -->
        <Border Grid.Row="1" 
                Background="{StaticResource BackgroundAlternateBrush}" 
                CornerRadius="8" 
                Padding="20" 
                Effect="{StaticResource SmallShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Invoice Info -->
                    <RowDefinition Height="Auto"/>
                    <!-- Separator -->
                    <RowDefinition Height="Auto"/>
                    <!-- Payment Form -->
                    <RowDefinition Height="Auto"/>
                    <!-- Actions -->
                </Grid.RowDefinitions>

                <!-- Invoice Info -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Informacje o fakturze" 
                               FontSize="18" 
                               Foreground="{StaticResource WhiteBrush}" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Numer faktury:" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   Text="{Binding Invoice.InvoiceNumber}" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Klient:" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                   Text="{Binding Invoice.Client.Name}" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Kwota brutto:" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                   Text="{Binding Invoice.TotalGross, StringFormat='{}{0:N2} PLN'}" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Zapłacono:" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                   Text="{Binding Invoice.PaidAmount, StringFormat='{}{0:N2} PLN'}" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,5"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                   Text="Pozostało:" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,5"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" 
                                   Text="{Binding Invoice.RemainingAmount, StringFormat='{}{0:N2} PLN'}" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,5"/>
                    </Grid>
                </StackPanel>

                <!-- Separator -->
                <Separator Grid.Row="1" Margin="0,10"/>

                <!-- Payment Form -->
                <StackPanel Grid.Row="2" Margin="0,20,0,20">
                    <TextBlock Text="Dane płatności" 
                               FontSize="18" 
                               Foreground="{StaticResource WhiteBrush}" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Kwota:" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,10,0,5" 
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding PaymentAmount, StringFormat='{}{0:N2}'}" 
                                 Style="{StaticResource ModernTextBoxStyle}" 
                                 Margin="0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Data płatności:" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,10,0,5" 
                                   VerticalAlignment="Center"/>
                        <DatePicker Grid.Row="1" Grid.Column="1" 
                                    SelectedDate="{Binding PaymentDate}" 
                                    Style="{StaticResource ModernDatePickerStyle}" 
                                    Margin="0,5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Metoda płatności:" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,10,0,5" 
                                   VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" 
                                  ItemsSource="{Binding PaymentMethods}" 
                                  SelectedItem="{Binding PaymentMethod}" 
                                  Style="{StaticResource ModernComboBoxStyle}" 
                                  Margin="0,5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Uwagi:" 
                                   Foreground="{StaticResource WhiteBrush}" 
                                   Margin="0,10,0,5" 
                                   VerticalAlignment="Top"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 Text="{Binding PaymentNotes}" 
                                 Style="{StaticResource ModernTextBoxStyle}" 
                                 Height="80" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalContentAlignment="Top" 
                                 Margin="0,5"/>
                    </Grid>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Row="3" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,10,0,0">
                    <Button Content="Anuluj" 
                            Command="{Binding CancelCommand}" 
                            Style="{StaticResource SecondaryButtonStyle}" 
                            Width="120" 
                            Height="36" 
                            Margin="0,0,10,0"
                            ToolTip="Anuluj dodawanie płatności (Esc)"/>

                    <Button Content="Dodaj płatność" 
                            Command="{Binding AddPaymentCommand}" 
                            Style="{StaticResource ActionButtonStyle}" 
                            Width="120" 
                            Height="36"
                            ToolTip="Zapisz nową płatność (Ctrl+S)"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>