<Window x:Class="InvoicingApp.Windows.CustomDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dialog" 
        Width="400" 
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" 
        ResizeMode="NoResize"
        AllowsTransparency="True" 
        Background="Transparent"
        ShowInTaskbar="False">

    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Margin" Value="5,0,5,0" />
        </Style>
    </Window.Resources>

    <Border x:Name="MainBorder" 
            Background="{StaticResource BackgroundAlternateBrush}" 
            CornerRadius="8"
            Effect="{StaticResource SmallShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Content -->
                <RowDefinition Height="60"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BackgroundLighterBrush}" 
                    CornerRadius="8,8,0,0"
                    MouseDown="Header_MouseDown">
                <Grid>
                    <TextBlock x:Name="TitleText" 
                               Text="Dialog Title" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource WhiteBrush}" 
                               Margin="15,0,0,0"
                               VerticalAlignment="Center"/>

                    <!-- Close Button (if needed) -->
                    <Button x:Name="CloseButton"
                            Content="✕" 
                            Width="40" 
                            Height="40" 
                            Style="{StaticResource CloseButtonStyle}" 
                            HorizontalAlignment="Right"
                            Click="CloseButton_Click"
                            Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <TextBlock x:Name="IconText" 
                           Grid.Column="0"
                           Text="ℹ" 
                           FontSize="32" 
                           Margin="0,0,15,0" 
                           Foreground="{StaticResource PrimaryBrush}" 
                           VerticalAlignment="Center"/>

                <!-- Message -->
                <TextBlock x:Name="MessageText" 
                           Grid.Column="1"
                           Text="Message text goes here" 
                           TextWrapping="Wrap" 
                           Foreground="{StaticResource WhiteBrush}" 
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Buttons -->
            <Border Grid.Row="2" 
                    Background="{StaticResource BackgroundLighterBrush}" 
                    CornerRadius="0,0,8,8">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="0,0,20,0">
                    <Button x:Name="YesButton" 
                            Content="Tak" 
                            Style="{StaticResource ActionButtonStyle}"
                            Click="YesButton_Click"/>

                    <Button x:Name="NoButton" 
                            Content="Nie" 
                            Style="{StaticResource SecondaryButtonStyle}" 
                            Click="NoButton_Click"/>

                    <Button x:Name="OkButton" 
                            Content="OK" 
                            Style="{StaticResource ActionButtonStyle}" 
                            Click="OkButton_Click"
                            Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>